{  
  "name": "抓取淘宝商品信息",  
  "version": "0.9.0",  
  "manifest_version": 2, 
  "description": "更具用户填写的商品链接，获取商品的基本信息，填写表单，丰富模板资源库.",  
  "browser_action": {  
    "default_icon": "icon.png" ,
    "default_title": "My Task List",
    "default_popup": "popup.html"
  },
  "permissions": [
    "http://hws.m.taobao.com/",
    "tabs", 
    "activeTab",
    "webRequest", 
    "cookies"
  ],
  "background": {
    "scripts": ["background.js"]
  }
} 